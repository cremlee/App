<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">
    <ViewFlipper
        android:id="@+id/vf_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ViewFlipper>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/insoft_point_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
        <ImageView
            android:id="@+id/insoft_point_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/insoft_point_bg"
            android:padding="5dp"/>
    </LinearLayout>
</RelativeLayout>
