<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/canvas"
        android:layout_centerInParent="true"
        android:layout_width="380dp"
        android:layout_height="500dp">
    <TextView

        android:background="@color/spring_wood"
        android:layout_alignStart="@+id/n_1"
        android:layout_alignEnd="@+id/n_2"
        android:id="@+id/tx_input"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="1234567890"
        android:textSize="24sp"
        android:textColor="@color/material_black"
        android:gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="60dp" />
        <TextView
            android:paddingRight="10dp"
            android:background="@color/spring_wood"
            android:layout_toRightOf="@+id/tx_input"
            android:layout_alignEnd="@+id/n_3"
            android:id="@+id/tx_unit"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="ml"
            android:textSize="24sp"
            android:textColor="@color/material_black"
            android:gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <TextView
            android:textColor="@color/white"
            android:text="min"
            android:textSize="18sp"
            android:id="@+id/min"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tx_unit"
            android:layout_toRightOf="@+id/tx_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/white"
            android:text="max"
            android:textSize="18sp"
            android:id="@+id/max"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/tx_unit"
            android:layout_toRightOf="@+id/tx_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:tag="1"
            android:id="@+id/n_1"
            android:text="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/tx_input"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:tag="2"
            android:text="2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_1"
            android:layout_below="@+id/tx_input"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:tag="3"
            android:text="3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_2"
            android:layout_below="@+id/tx_input"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            />
        <Button
            android:tag="4"
            android:text="4"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/n_1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:tag="5"
            android:text="5"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_4"
            android:layout_below="@+id/n_1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:tag="6"
            android:text="6"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_2"
            android:layout_below="@+id/n_1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:tag="7"
            android:text="7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/n_4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:tag="8"
            android:text="8"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_4"
            android:layout_below="@+id/n_4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:tag="9"
            android:text="9"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_2"
            android:layout_below="@+id/n_4"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:text="ãƒ»"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_dot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/n_7"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            />
        <Button
            android:tag="0"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_0"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/n_4"
            android:layout_below="@+id/n_7"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:text="Del"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/n_del"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/n_7"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/n_2"
            />
        <Button
            android:text="Cal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/n_3"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tx_input"
            android:id="@+id/n_do"
            android:layout_width="80dp"
            android:layout_height="165dp" />

        <Button
            android:text="Set"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/n_3"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/n_6"
            android:id="@+id/n_set"
            android:layout_width="80dp"
            android:layout_height="165dp" />
    </RelativeLayout>
</RelativeLayout>