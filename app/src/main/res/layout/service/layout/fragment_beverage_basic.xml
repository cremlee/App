<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cqube="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spring_wood"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.luna.ViewUi.widget.SettingItemTextView1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1IsTextBold="true"
            cqube:textview1Text="@string/SVR_DRINK_BEVERAGE_BASIC_TITLE_1"
            cqube:textview1TextBackground="@color/title_text_color2"
            cqube:textview1TextColor="@android:color/white" />

        <android.luna.ViewUi.widget.SettingItemTextView2
            android:id="@+id/beverageNameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview2DrawbleRight="@drawable/ic_arrow_right_gray"
            cqube:textview2TextTitle="@string/SVR_DRINK_BEVERAGE_BASIC_NAME" />


        <!--<evo.luna.android.widget.SettingItemTextView1
            android:id="@+id/drinkIconPictureItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1DrawbleRight="@drawable/ic_arrow_right_gray"
            cqube:textview1Text="@string/drink_icon_picture"
            cqube:textview1TextColor="@color/default_text_title_color" />

        <evo.luna.android.widget.SettingItemTextView1
            android:id="@+id/drinkBgPictureItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1DrawbleRight="@drawable/ic_arrow_right_gray"
            cqube:textview1Text="@string/drink_bg_color"
            cqube:textview1TextColor="@color/default_text_title_color" />

        <evo.luna.android.widget.SettingItemTextView1
            android:id="@+id/drinkIconPicture1Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1DrawbleRight="@drawable/ic_arrow_right_gray"
            cqube:textview1Text="@string/drink_icon_picture1"
            cqube:textview1TextColor="@color/default_text_title_color" />

        <evo.luna.android.widget.SettingItemTextView1
            android:id="@+id/drinkIconPicture2Item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1DrawbleRight="@drawable/ic_arrow_right_gray"
            cqube:textview1Text="@string/drink_icon_picture2"
            cqube:textview1TextColor="@color/default_text_title_color" />

        &lt;!&ndash; Default Drink Info Page &ndash;&gt;

        <evo.luna.android.widget.SettingItemDropDown
            android:id="@+id/defaultDrinkInfoPageItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:dropdownDrawble="@drawable/ic_setting_popup_arrow_grey"
            cqube:dropdownItems="1#2#3"
            cqube:dropdownTextName="@string/landing_page"
            cqube:dropdownTextValue="1"
            cqube:dropdownValues="1#2#3" />

        <evo.luna.android.widget.SettingItemTextView1
            android:id="@+id/changeRecipeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1TextBackground="@color/title_bg_color"
            cqube:textview1DrawbleRight="@drawable/ic_arrow_right_gray"
            cqube:textview1Text="@string/change_recipe"
            cqube:textview1TextColor="@color/default_text_title_color" />
-->
        <!--<evo.luna.android.widget.SettingItemTextView1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1IsTextBold="true"
            cqube:textview1Text="@string/add_recipe_settings"
            cqube:textview1TextBackground="@color/title_text_color2"
            cqube:textview1TextColor="@android:color/white" />

        <evo.luna.android.widget.SettingItemCheckBox
            android:visibility="gone"
            android:id="@+id/stoppableCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/stoppable" />-->

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/cupSensorCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_CUP" />

        <LinearLayout
            android:id="@+id/drinkPricelyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal"
            android:paddingEnd="30dp"
            android:paddingStart="30dp" >

            <TextView
                style="@style/TextViewTitleItem"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/SVR_DRINK_BEVERAGE_BASIC_PRICE" />

            <EditText
                android:id="@+id/drinkPriceValue"
                style="@style/TextViewTitleDescItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="00.00"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:background="@color/line" />

        <android.luna.ViewUi.widget.SettingItemDropDown
            android:id="@+id/brewLightItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:dropdownDrawble="@drawable/ic_setting_popup_arrow_grey"
            cqube:dropdownItems="Color1#Color1#Color1#Color1#Color5#Color6"
            cqube:dropdownTextName="@string/SVR_DRINK_BEVERAGE_BASIC_LED_COLOR"
            cqube:dropdownTextValue="red"
            cqube:dropdownValues="1#2#3#4#5#6" />

        <android.luna.ViewUi.widget.SettingItemDropDown
            android:id="@+id/ledModeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:dropdownDrawble="@drawable/ic_setting_popup_arrow_grey"
            cqube:dropdownItems="Always On#Flash#Breath#Circling#Off"
            cqube:dropdownTextName="@string/SVR_DRINK_BEVERAGE_BASIC_LED_MODE"
            cqube:dropdownTextValue="always on"
            cqube:dropdownValues="1#2#3#4#5" />

        <android.luna.ViewUi.widget.SettingItemDropDown
            android:id="@+id/dispenseTypeItem"
            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_height="wrap_content"
            cqube:dropdownDrawble="@drawable/ic_setting_popup_arrow_grey"
            cqube:dropdownItems="Push And Hold#Portion"
            cqube:dropdownTextName="@string/SVR_DRINK_BEVERAGE_BASIC_DISPENSING_MODE"
            cqube:dropdownTextValue="push and hold"
            cqube:dropdownValues="1#2" />

        <android.luna.ViewUi.widget.SettingItemTextView1
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:textview1IsTextBold="true"
            cqube:textview1Text="@string/SVR_DRINK_BEVERAGE_BASIC_TITLE_2"
            cqube:textview1TextBackground="@color/title_text_color2"
            cqube:textview1TextColor="@android:color/white" />

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/strengthCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_STRENGTH" />

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/volumeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_VOLUME" />

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/chocolateCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_CHOCOLATE" />

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/milkCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_MILK" />

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/toppingCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_TOP" />

        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/sugarCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_SUGAR" />


        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/jugCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_JUG" />
        <android.luna.ViewUi.widget.SettingItemCheckBox
            android:id="@+id/dirctCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            cqube:checkBoxText="@string/SVR_DRINK_BEVERAGE_BASIC_QUICK" />
    </LinearLayout>

</ScrollView>
