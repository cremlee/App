<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_out"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:background="@color/spring_wood"
        android:layout_width="400dp"
        android:layout_height="500dp">
        <android.luna.ViewUi.PSW.PasswordInputView
            android:id="@+id/psw_input"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:cursorVisible="false"
            android:inputType="numberSigned"
            android:maxLength="6"
            app:passwordLength="6"
            app:borderWidth="2dp"
            app:passwordWidth="6dp"
            app:passwordColor="#ffff0000"
        />
        <ImageView
            android:id="@+id/psw_qr"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/psw_input"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/psw_qr"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/material_black"
            android:text="Scan the Qrcode to get the password!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>