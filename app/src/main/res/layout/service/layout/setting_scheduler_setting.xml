<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="510dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#303030"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/textViewTitle"
            style="@style/TextViewTitleItem"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <TextView
            style="@style/TextViewTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:text="@string/sdl_evttype"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/spinnerEventType"
            style="@style/styleSpinnerSoldout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:spinnerMode="dropdown" />

        <TextView
            style="@style/TextViewTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:text="@string/start_time1"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/spinnerStartTime"
            style="@style/styleSpinnerSoldout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/startTimeLayer"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#636360"
            android:text="00:00"
            android:textSize="22sp"
            android:padding="5dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/stopTimetitle"
            style="@style/TextViewTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:text="@string/sdl_edrt"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/spinnerDuration"
            style="@style/styleSpinnerSoldout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/durationLayer"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#636360"
            android:textSize="22sp"
            android:text="0"
            android:padding="5dp"
            android:gravity="center_vertical" />
        
		<TextView
            android:id="@+id/priceofftitle"
            style="@style/TextViewTitleItem"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:text="Price off"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/sppriceoff"
            style="@style/styleSpinnerSoldout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:spinnerMode="dropdown" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#215B8D"
                android:text="@string/str_cancel"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="#636360"
                android:text="@string/str_ok"
                android:textColor="@android:color/white"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>