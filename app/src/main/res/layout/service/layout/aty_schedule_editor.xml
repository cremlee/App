<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/lytheader"
        android:background="@color/material_grey_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_back"
            android:textSize="42sp"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/lytheader"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <RadioGroup
            android:id="@+id/myTabRg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:gravity="center_horizontal|bottom"
                android:paddingTop="50dp"
                android:text="Overview"
                android:textColor="@drawable/tab_selector_tv_color"
                android:textSize="28sp" />
            <RadioButton
                android:id="@+id/rb_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:gravity="center_horizontal|bottom"
                android:paddingTop="50dp"
                android:text="Daily clean"
                android:textColor="@drawable/tab_selector_tv_color"
                android:textSize="28sp" />
            <RadioButton
                android:id="@+id/rb_weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:gravity="center_horizontal|bottom"
                android:paddingTop="50dp"
                android:text="Weekly clean"
                android:textColor="@drawable/tab_selector_tv_color"
                android:textSize="28sp" />
            <RadioButton
                android:id="@+id/rb_eco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:gravity="center_horizontal|bottom"
                android:paddingTop="50dp"
                android:text="ECO"
                android:textColor="@drawable/tab_selector_tv_color"
                android:textSize="28sp" />
            <RadioButton
                android:id="@+id/rb_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:button="@null"
                android:checked="false"
                android:gravity="center_horizontal|bottom"
                android:paddingTop="50dp"
                android:text="Load Default"
                android:textColor="@drawable/tab_selector_tv_color"
                android:textSize="28sp" />
        </RadioGroup>
        <FrameLayout
            android:id="@+id/fly_schedule"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>