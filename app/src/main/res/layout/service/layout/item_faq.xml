<?xml version="1.0" encoding="utf-8"?>
<com.silencedut.expandablelayout.ExpandableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:expWithParentScroll="true"
    android:id="@+id/expandable_layout"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/firstLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sr_txt_unselected"
        >
        <ImageView
            android:layout_margin="20dp"

            android:id="@+id/summoner_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/info"
            />

        <TextView
            android:id="@+id/faq_title"
            android:layout_toRightOf="@+id/summoner_iv"
            android:layout_marginLeft="5dp"
            android:textColor="@color/material_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sr_title_size"
            android:text="Question"
            />

        <TextView
            android:id="@+id/label"
            android:layout_toRightOf="@+id/summoner_iv"
            android:layout_below="@+id/faq_title"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/material_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="question content"
            android:textSize="20sp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sr_header_txt_list"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/material_red_500"
            android:textSize="20sp"
            android:text="Answer"
            />
        <TextView
            android:textColor="@color/material_red_500"
            android:id="@+id/faq_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="how to solve the issues"
            android:textSize="18sp"/>

    </LinearLayout>


</com.silencedut.expandablelayout.ExpandableLayout>