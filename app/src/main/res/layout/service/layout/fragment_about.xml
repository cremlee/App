<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:alignmentMode="alignBounds"
    android:padding="10dp"
    android:background="@color/sr_bg_right_fun"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/layout_white_border"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="@string/SVR_INFO_TITLE_SYSTEM"
                android:textColor="@color/material_black"
                android:gravity="center"
                android:textSize="@dimen/sr_title_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/ver_android"
                android:padding="5dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_SYSTEM_VERSION"
                app:textview2TextValue="4.4.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/ver_kernal"
                android:padding="5dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_SYSTEM_KERNAL"
                app:textview2TextValue="dadakk3345"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/ver_mode"
                android:padding="5dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_SYSTEM_MODEL"
                app:textview2TextValue="dadakk3345"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/blue_mac"
                android:padding="5dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_SYSTEM_BLUE"
                app:textview2TextValue=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/layout_white_border"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/material_black"
                android:text="@string/SVR_INFO_TITLE_APP"
                android:gravity="center"
                android:textSize="@dimen/sr_title_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/ver_app"
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_APP_SW"
                app:textview2TextValue="1.5.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/ver_database"
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_APP_DB"
                app:textview2TextValue="1.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/layout_white_border"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/material_black"
                android:text="@string/SVR_INFO_TITLE_FIRMWARE"
                android:gravity="center"
                android:textSize="@dimen/sr_title_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_FIRMWARE_IO"
                app:textview2TextValue="1.5.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_FIRMWARE_PAY"
                app:textview2TextValue="1.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:background="@drawable/layout_white_border"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/material_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/SVR_INFO_TITLE_MACHINE"
                android:textSize="@dimen/sr_title_size" />

            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_MACHINE_NAME"
                app:textview2TextValue="EVO" />

            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_MACHINE_NO"
                app:textview2TextValue="2006-0713-0013-0001" />

            <android.luna.ViewUi.widget.SettingItemTextViewVer
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:textview2TextTitle="@string/SVR_INFO_TITLE_MACHINE_INSTALL_DATE"
                app:textview2TextValue="2018-01-01" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>