<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" >
        <Button
            android:id="@+id/edt_beverage"
            android:layout_margin="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Beverage Editor"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/edt_ingredient"
            android:layout_margin="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Ingredient Editor"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/edt_group"
            android:layout_margin="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Group Editor"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" >
        <Button
            android:id="@+id/namebtn"
            android:text="Drink Name Editor"
            android:layout_margin="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:visibility="invisible"
            android:layout_margin="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:visibility="invisible"
            android:layout_margin="30dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>