<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@mipmap/sr_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_clean"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:src="@mipmap/cleanr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sr_title_size"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="@string/SVR_CLEAN_MENU_CLEAN"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_schedule"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:src="@mipmap/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sr_title_size"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="@string/SVR_CLEAN_MENU_SCHEDULE"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/edt_maintenance"
            android:background="@color/transparent"
            android:layout_gravity="center"
            android:src="@mipmap/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sr_title_size"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="Maintenance"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>