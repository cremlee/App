<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cqube="http://schemas.android.com/apk/res-auto"
    android:background="@color/sr_bg_right_fun"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

   <RelativeLayout
       android:id="@+id/a1"
       android:layout_alignParentRight="true"
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
      <com.github.mikephil.charting.charts.PieChart
          android:id="@+id/mChart"
          android:layout_width="250dp"
          android:layout_height="250dp"/>
   </RelativeLayout>
   <ScrollView
       android:layout_margin="10dp"
       android:background="@drawable/shape_counter"
       android:id="@+id/sv"
       android:scrollbars="none"
       android:layout_toLeftOf="@+id/a1"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:padding="1dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/spring_wood"
      android:orientation="vertical" >
      <!-- 不能被清掉 -->
      <android.luna.ViewUi.widget.SettingItemTextView2

          android:id="@+id/masterTotalWaterItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cqube:textview2TextBackground="@color/sr_header_txt_list"
          cqube:textview2TextColor="@color/material_black"
          cqube:textview2TextTitle="@string/SVR_CT_TOTAL_WATER"
          cqube:textview2TextValue="0" />
      <!-- 不能被清掉 -->

      <android.luna.ViewUi.widget.SettingItemTextView2
          android:id="@+id/masterTotalBeverageItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cqube:textview2TextBackground="@color/sr_header_txt_list"
          cqube:textview2TextColor="@color/material_black"
          cqube:textview2TextTitle="@string/SVR_CT_TOTAL_BEVERAGE"
          cqube:textview2TextValue="0"
          />

      <android.luna.ViewUi.widget.SettingItemTextView2
          android:id="@+id/resetCountBeverageItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cqube:textview2TextTitle="@string/SVR_CT_TITLE_BEVERAGE"
          cqube:textview2TextValue="@string/SVR_CT_TITLE_RESET" />

      <ListView
          android:id="@+id/list_counter"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:divider="@drawable/inset90"
          android:dividerHeight="1dp"
          android:fadingEdge="none"
          android:scrollbars="none"/>

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/line"
          android:paddingLeft="30dp"
          android:paddingRight="30dp" />

      <TextView
          android:id="@+id/totalBeverageItem"
          style="@style/TextViewTitleItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right|center_vertical"
          android:paddingEnd="30dp"
          android:textColor="@color/title_text_color"
          android:textSize="20sp" />

      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/line"
          android:paddingLeft="30dp"
          android:paddingRight="30dp" />

      <android.luna.ViewUi.widget.SettingItemTextView2
          android:id="@+id/resetCountProgramItem"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          cqube:textview2TextTitle="@string/SVR_CT_TITLE_ClEAN"
          cqube:textview2TextValue="@string/SVR_CT_TITLE_RESET" />

      <ListView
          android:id="@+id/list_cleanprogram"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:divider="@drawable/inset90"
          android:dividerHeight="1dp"
          android:fadingEdge="none"
          android:scrollbars="none" />
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/line"
          android:paddingLeft="30dp"
          android:paddingRight="30dp" />
  </LinearLayout>
   </ScrollView>
   <RelativeLayout
       android:layout_margin="10dp"
       android:id="@+id/lyt_chart"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
       <lecho.lib.hellocharts.view.ColumnChartView
           android:padding="50dp"
           android:id="@+id/helloChart"
           android:layout_centerInParent="true"
           android:layout_width="match_parent"
           android:layout_height="500dp" />
   </RelativeLayout>
    <ImageView
        android:id="@+id/chart_bar"
        android:layout_alignParentRight="true"
        android:src="@drawable/ics_counters"
        android:layout_margin="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
</RelativeLayout>