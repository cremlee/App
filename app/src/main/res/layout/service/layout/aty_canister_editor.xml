<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/sr_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/lytheader"
        android:background="@color/material_grey_700"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <Button
            android:drawableLeft="@drawable/ic_back"
            android:id="@+id/btn_back"
            android:minWidth="150dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginStart="20dp"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MENU_BACK"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/lytheader"
        android:background="@drawable/boder"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:background="@drawable/shape_drink_body"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sr_title_size"
                android:text="@string/SVR_SETTING_CANISTER_TITLE"
                android:gravity="center"
                android:textColor="@color/material_white"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/title"
                android:id="@+id/rv_canister"
                android:layout_above="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:textColor="@color/material_white"
                android:background="@drawable/selector_button"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/sr_item_size"
                android:drawableStart="@android:drawable/ic_input_add"
                android:text="@string/SVR_SETTING_CANISTER_DEFAULT"
                />
    </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/shape_drink_body"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <android.luna.ViewUi.bottombar.BottomBar
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                app:bb_activeTabColor="@color/red"
                app:bb_showShadow="false"
                app:bb_tabXmlResource="@xml/canister_tab" />
            <FrameLayout
                android:layout_above="@+id/bottomBar"
                android:id="@+id/fly_canister_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>