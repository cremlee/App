<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/sr_bg_right_fun"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_help_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
       >
        <EditText
            android:id="@+id/starttime"
            android:minWidth="140dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:hint="@string/hint_start"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="To"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/sr_title_size" />
        <EditText
            android:id="@+id/stoptime"
            android:layout_width="wrap_content"
            android:minWidth="140dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:clickable="true"
            android:focusable="true"
            android:hint="@string/stop"
            android:textAlignment="center"
            android:layout_gravity="center_vertical" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/edt_search"
            android:minWidth="240dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="45dp"
            android:hint="keywords"
            android:textAlignment="center"
            android:layout_marginStart="30dp" />
        <Button
            android:background="@drawable/selector_button"
            android:textSize="@dimen/sr_title_size"
            android:textColor="@color/material_white"
            android:layout_marginEnd="20dp"
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:minWidth="140dp"
            android:layout_height="45dp"
            android:text="Go"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp" />
        <!--<CheckedTextView
            android:id="@+id/ck_1"
            android:layout_width="wrap_content"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="item1"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24sp"
            android:layout_below="@+id/starttime"
            android:layout_alignStart="@+id/starttime"
            android:layout_marginTop="21dp" />-->
    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:background="@drawable/shape_help_body"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp">
        <LinearLayout
            android:paddingStart="5dp"
            android:background="@color/sr_txt_unselected"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/material_black"
                android:layout_weight="4"
                android:text="time"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/material_black"
                android:textSize="20sp"
                android:layout_weight="4"
                android:text="type"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textColor="@color/material_black"
                android:textSize="20sp"
                android:layout_weight="20"
                android:text="content"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ListView
            android:id="@+id/lsvlog"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shape_help_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:layout_height="0dp"/>
</LinearLayout>