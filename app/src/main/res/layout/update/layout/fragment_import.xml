<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="match_parent" >
        <TextView
            android:text="USB info"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/rgp_config"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 1"
                android:id="@+id/config_1"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 2"
                android:id="@+id/config_2"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 3"
                android:id="@+id/config_3"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 4"
                android:id="@+id/config_4"/>
        </RadioGroup>
        <Button
        android:layout_margin="10dp"
        android:id="@+id/btn_import"
        android:text="import selected config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/btn_update_lang"
            android:text="Update Drink Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title2"
                android:text="LongPress and drag the file to the dest dir!"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <GridView
                android:layout_below="@+id/title2"
                android:id="@+id/gdv_pic"
                android:numColumns="4"
                android:verticalSpacing="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <!--<ImageView
                android:id="@+id/img_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/coffee" />-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dir_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Icon"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dir_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="background"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Dispense"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Pdf/Video"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Other"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>