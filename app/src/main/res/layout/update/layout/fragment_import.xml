<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="match_parent" >
        <TextView
            android:text="USB info"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioGroup
            android:id="@+id/rgp_config"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 1"
                android:id="@+id/config_1"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 2"
                android:id="@+id/config_2"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 3"
                android:id="@+id/config_3"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Configration 4"
                android:id="@+id/config_4"/>
        </RadioGroup>
        <Button
        android:layout_margin="10dp"
            android:minHeight="45dp"

        android:id="@+id/btn_import"
        android:text="import selected config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:visibility="gone"
            android:layout_margin="10dp"
            android:id="@+id/btn_update_lang"
            android:text="Update Drink Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title2"
                android:text="LongPress and drag the file to the dest dir!"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/title2"
                android:id="@+id/gdv_pic"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
<ScrollView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:textSize="18sp"
        android:layout_gravity="center"
        android:text="Dest Folders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dir_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="background"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_icon"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Drink Icon"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_dispense"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Drink animation"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_stroy"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Drink story"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_gallery"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Gallery Image"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_cuplogo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Cup Logo"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Banner Logo"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/dir_saver"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Screen save "
            android:textSize="20sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/dir_pdf"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Pdf &amp; Video"
            android:textSize="20sp" />

    </LinearLayout>
</ScrollView>


    </LinearLayout>
</LinearLayout>