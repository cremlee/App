<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:text="Back"
        android:textSize="24sp"
        android:id="@+id/btn_back"
        android:layout_margin="20dp"
        android:layout_width="180dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/a1"
        android:background="@drawable/lineborder"
        android:orientation="vertical"
        android:layout_below="@+id/btn_back"
        android:layout_alignStart="@+id/btn_back"
        android:layout_alignEnd="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <Button
            android:text="Property"
            android:textSize="20sp"
            android:id="@+id/btn_property"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="T &amp; C"
            android:textSize="20sp"
            android:id="@+id/btn_test"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="LifeCycle"
            android:textSize="20sp"
            android:id="@+id/btn_life"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/vp_device"
        android:background="@drawable/lineborder"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/btn_back"
        android:layout_alignBaseline="@+id/a1"
        android:layout_toRightOf="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
