<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bg"
    android:background="@mipmap/bgtest"
    android:layout_height="match_parent">
    <!--back function area-->
    <Button
        android:id="@+id/back"
        android:background="@mipmap/backicon"
        android:layout_margin="50dp"
        android:layout_alignParentEnd="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <!--make drink function area-->
    <LinearLayout
        android:id="@+id/lyt_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:background="@mipmap/cupinfo"
            android:id="@+id/info"
            android:layout_width="80dp"
            android:layout_height="80dp" />
        <Button
            android:background="@drawable/selector_start"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="@string/hint_start"
            android:textSize="28sp"
            android:textColor="@color/material_white"
            android:id="@+id/start"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <Button
            android:layout_marginEnd="3dp"
            android:background="@mipmap/jug"
            android:id="@+id/jug"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/lyt_bottom"
        android:layout_width="700dp"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/coffee"
            android:id="@+id/icon"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="0dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:text="drink name"
            android:textColor="@color/material_white"
            android:id="@+id/name"
            android:textSize="@dimen/cui_name_size"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--preselection-->
    <LinearLayout
        android:padding="20dp"
        android:background="@mipmap/volumebg"
        android:alpha="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
        <RelativeLayout
            android:id="@+id/volumeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp" >
            <TextView
                android:id="@+id/volumeText"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:minWidth="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/volume"
                android:textColor="@color/bg_color_3"
                android:textSize="20sp"
                android:textStyle="italic"/>
            <RatingBar
                android:id="@+id/volumeBatingBar"
                style="@style/teavolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/volumeText"
                android:numStars="5"
                android:progress="3"
                android:stepSize="1" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/strengthItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp" >
            <TextView
                android:id="@+id/strengthText"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:minWidth="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/strength"
                android:textColor="@color/bg_color_3"
                android:textSize="20sp"
                android:textStyle="italic" />

            <RatingBar
                style="@style/teastrength"
                android:id="@+id/strengthBatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/strengthText"
                android:numStars="5"
                android:progress="3"
                android:stepSize="1" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/extractionItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="10dp" >
            <TextView
                android:id="@+id/extractionText"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:minWidth="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="extraction"
                android:textColor="@color/bg_color_3"
                android:textSize="20sp"
                android:textStyle="italic"/>
            <RatingBar
                style="@style/teaext"
                android:id="@+id/extractionBatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/extractionText"
                android:numStars="5"
                android:progress="3"
                android:stepSize="1" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>