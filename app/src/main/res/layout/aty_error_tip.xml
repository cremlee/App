<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="@drawable/menu_pop_bg"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Out of Service"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service call:"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123567891"
                android:textSize="24sp" />
            
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/lineborder"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <ViewFlipper
                android:clickable="true"
                android:id="@+id/errorlsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/pageindex"
                android:text="1/3"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="@drawable/lineborder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="28sp"
                    android:text="T : 90 â„ƒ"
                    android:id="@+id/ntc"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="20dp"
                    android:textSize="28sp"
                    android:text="W: normal"
                    android:id="@+id/water"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />
                <Button
                    android:id="@+id/action"
                    android:layout_gravity="center"
                    android:text="action"
                    android:layout_marginBottom="20dp"
                    android:minWidth="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>