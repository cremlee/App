<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Installation wizzard"
    android:layout_gravity="center"
    android:textSize="50sp"/>
    <ViewFlipper
        android:id="@+id/vf_fun"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:minHeight="65dp"
            android:textSize="24sp"
            android:id="@+id/btn_pre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_media_rew"
            android:text="Previous" />

        <Button
            android:textSize="24sp"
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_set_as"
            android:text="@string/wizard_skip" />

        <Button
            android:textSize="24sp"
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_media_ff"
            android:text="@string/wizard_next" />
    </LinearLayout>
</LinearLayout>