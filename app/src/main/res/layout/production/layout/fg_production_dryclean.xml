<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/material_grey_400"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
    android:layout_marginTop="30dp"
    android:layout_marginStart="20dp"
    android:textColor="@color/material_black"
    android:text="@string/PL_DRY_TITLE"
    android:textSize="26sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/step_1"
            android:text="@string/PL_STEP_1"
            android:layout_width="150dp"
            android:layout_height="45dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/step_2"
            android:text="@string/PL_STEP_2"
            android:layout_width="150dp"
            android:layout_height="45dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/step_3"
            android:text="@string/PL_STEP_3"
            android:layout_width="150dp"
            android:layout_height="45dp" />
        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/step_4"
            android:text="@string/PL_STEP_4"
            android:layout_width="150dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1">

        <ViewFlipper
            android:id="@+id/op_vf"
            android:layout_width="600dp"
            android:layout_height="match_parent" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/op_fun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:text="@string/wizard_finish"
        android:layout_gravity="right"
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="50dp" />
</LinearLayout>